<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.tourye.wake.ui.activities.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">

        <RelativeLayout
            android:id="@+id/rl_activity_login_morning"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_activity_login_morning"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_45"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_activity_main_morning" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_activity_login_influence"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_activity_login_influence"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_45"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_activity_main_influence" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_activity_login_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_activity_login_mine"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_45"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_activity_main_mine" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
