<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout_fragment_influence"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:id="@+id/scroll_fragment_influence"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_240"
                    android:background="@drawable/icon_influence_top">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/size_20"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_marginRight="@dimen/size_15"
                        android:layout_marginTop="@dimen/size_20"
                        android:background="@drawable/shape_fragment_influence_top"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_28"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="@dimen/size_10"
                            android:layout_marginTop="@dimen/size_20"
                            android:gravity="center"
                            android:text="早起大使计划"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="坚持早起的人都是自律自由的人\n让我们把这样的精神影响到更多的人\n让大家也能一起早起\n
平台为你记录每一次影响成就"
                            android:textColor="#FF000000"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_fragment_influence_share"
                            android:layout_width="@dimen/size_275"
                            android:layout_height="@dimen/size_47"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/size_10"
                            android:background="@drawable/shape_fragment_morning_bt_unselected"
                            android:gravity="center"
                            android:text="分享邀请卡"
                            android:textColor="@color/color_white_font"
                            android:textSize="@dimen/sp_16" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_10"
                    android:background="#FFEFEFF4" />

                <LinearLayout
                    android:id="@+id/ll_fragment_influence_people"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_44"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_fragment_influence_people_num"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_22"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/size_15"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="直接影响-人"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/img_fragment_influence_people"
                        android:layout_width="@dimen/size_20"
                        android:layout_height="@dimen/size_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/size_20"
                        android:background="@drawable/icon_arrow_bottom" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_fragment_influence_people"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_188">

                    <ImageView
                        android:id="@+id/img_fragment_influence_back"
                        android:layout_width="@dimen/size_136"
                        android:layout_height="@dimen/size_136"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_14"
                        android:background="@drawable/icon_influence_none" />
                    <TextView
                        android:text="你还没有邀请朋友～"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/img_fragment_influence_back"
                        android:layout_marginTop="@dimen/size_4"
                        android:textColor="@color/color_gray_font"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


                <com.tourye.wake.views.MeasureGridView
                    android:id="@+id/grid_fragment_influence_people"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_15"
                    android:layout_marginBottom="@dimen/size_5"
                    android:layout_marginRight="@dimen/size_15"
                    android:numColumns="5">

                </com.tourye.wake.views.MeasureGridView>

                <TextView
                    android:id="@+id/tv_fragment_influence_loadmore"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="加载更多"
                    android:textSize="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_10"
                    android:background="#FFEFEFF4" />

                <com.tourye.wake.views.MeasureListView
                    android:id="@+id/list_fragment_influence_rank"
                    android:listSelector="@android:color/transparent"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.tourye.wake.views.MeasureListView>

            </LinearLayout>

        </ScrollView>


        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>