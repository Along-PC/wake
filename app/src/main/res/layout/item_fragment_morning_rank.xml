<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_58"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60">

        <TextView
            android:id="@+id/tv_item_frag_morning_rank_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginRight="@dimen/size_12"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/img_item_frag_morning_rank_order"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_12"
            android:visibility="gone" />

    </LinearLayout>


    <ImageView
        android:id="@+id/img_item_frag_morning_rank_head"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_item_frag_morning_rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#FF333333"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:id="@+id/ll_item_fragment_morning_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_frag_morning_rank_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_2"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_item_frag_morning_rank_first_oder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF666666"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_frag_morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/size_17"
        android:textColor="#FF333333"
        android:textSize="@dimen/sp_16" />


</LinearLayout>