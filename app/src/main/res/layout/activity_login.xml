<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon_login_back"
    android:paddingLeft="@dimen/size_20"
    android:paddingRight="@dimen/size_20"
    tools:context="com.tourye.wake.ui.activities.LoginActivity">

    <LinearLayout
        android:id="@+id/ll_activity_login_region"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginTop="@dimen/size_200"
        android:background="@drawable/shape_edit_back"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20">

        <TextView
            android:id="@+id/tv_activity_login_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="中国大陆"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_activity_login_regionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/size_10"
            android:text="+86"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_arrow_right" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:background="@drawable/shape_edit_back"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20">

        <EditText
            android:id="@+id/edt_activity_login_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:maxLines="1"
            android:hint="输入手机号"
            android:inputType="number"
            android:textColorHint="#FFCCCCCC"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginBottom="@dimen/size_20"
        android:layout_marginTop="@dimen/size_10"
        android:background="@drawable/shape_edit_back"
        android:paddingLeft="@dimen/size_20"
        android:paddingRight="@dimen/size_20">

        <EditText
            android:id="@+id/edt_activity_login_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="动态密码"
            android:maxLines="1"
            android:inputType="number"
            android:textColorHint="#FFCCCCCC"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_activity_login_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="获取动态密码"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="使用邀请码（选填）"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_14" />

        <Switch
            android:id="@+id/switch_activity_login"
            android:track="@drawable/selector_switch_track"
            android:thumb="@drawable/selector_switch_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_activity_login_invite"
        android:background="@drawable/shape_edit_back"
        android:hint="请输入邀请码"
        android:textColorHint="#FFCCCCCC"
        android:textSize="@dimen/sp_14"
        android:layout_margin="@dimen/size_5"
        android:gravity="center"
        android:visibility="gone"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48" />

    <Button
        android:layout_marginTop="@dimen/size_20"
        android:id="@+id/bt_activity_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:layout_marginBottom="@dimen/size_10"
        android:background="@drawable/selector_login_bt"
        android:gravity="center"
        android:text="手机快捷登录"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未收到？"
            android:textColor="#FFBCBCBC"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_activity_login_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击这里"
            android:textColor="#FF696969"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</LinearLayout>
