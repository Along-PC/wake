<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEFEFF4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tv_fragment_mine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/size_10"
            android:text="早起打卡"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_fragment_mine_message"
                android:layout_width="@dimen/size_25"
                android:layout_height="@dimen/size_25"
                android:background="@drawable/icon_message" />

            <ImageView
                android:id="@+id/img_fragment_mine_point"
                android:visibility="gone"
                android:background="@drawable/shape_mine_message_point"
                android:layout_width="@dimen/size_8"
                android:layout_height="@dimen/size_8"
                android:layout_alignTop="@+id/img_fragment_mine_message"
                android:layout_toRightOf="@+id/img_fragment_mine_message" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:layout_alignParentBottom="true"
            android:background="#FFEFEFF4" />

    </RelativeLayout>


    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_206"
            android:background="@drawable/icon_mine_top">

            <ImageView
                android:id="@+id/img_fragment_mine_head"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_28" />

            <ImageView
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_28"
                android:background="@drawable/shape_mine_head" />

            <TextView
                android:id="@+id/tv_fragment_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_22"
                android:layout_below="@+id/img_fragment_mine_head"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                android:text="这个是用户昵称"
                android:textColor="@color/color_white_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/img_fragment_mine_modify"
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_alignBottom="@+id/tv_fragment_mine_name"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_toRightOf="@+id/tv_fragment_mine_name"
                android:background="@drawable/icon_modify_name" />

            <TextView
                android:id="@+id/tv_fragment_mine_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_17"
                android:layout_below="@+id/tv_fragment_mine_name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="编号：------"
                android:textColor="@color/color_white_font"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15"
            android:layout_height="@dimen/size_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/size_10"
            android:layout_marginTop="-40dp"
            android:background="@drawable/shape_fragment_mine_days">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fragment_mine_accumulative"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_42"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="---"
                    android:textColor="@color/color_black_font"
                    android:textSize="@dimen/sp_30"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_20"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="累计天数"
                    android:textColor="@color/color_gray_font"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_fragment_mine_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_42"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/color_black_font"
                    android:text="---"
                    android:textSize="@dimen/sp_30"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_20"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="连续天数"
                    android:textColor="@color/color_gray_font"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_mine_punch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/icon_mine_punch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:text="打卡记录"
                android:textColor="@color/color_common_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/icon_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="#FFF2F2F2" />

        <LinearLayout
            android:id="@+id/ll_fragment_mine_prize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/icon_mine_prize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:text="早起奖金"
                android:textColor="@color/color_common_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/icon_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="#FFF2F2F2" />

        <LinearLayout
            android:id="@+id/ll_fragment_mine_influence"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/icon_mine_influence" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:text="影响奖励"
                android:textColor="@color/color_common_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/icon_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="#FFF2F2F2" />

        <LinearLayout
            android:id="@+id/ll_fragment_mine_ticket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:layout_marginBottom="@dimen/size_10"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/icon_board_ticket_shop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:text="我的局票"
                android:textColor="@color/color_common_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/icon_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_mine_problem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/icon_mine_problem" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:text="常见问题"
                android:textColor="@color/color_common_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/icon_arrow_right" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"
            android:background="#FFF2F2F2" />

        <LinearLayout
            android:id="@+id/ll_fragment_mine_business"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:layout_marginBottom="@dimen/size_10"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/icon_mine_business" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:text="商务合作"
                android:textColor="@color/color_common_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/icon_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fragment_mine_function"
            android:layout_marginBottom="@dimen/size_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44"
            android:background="#FFFFFF">

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_15"
                android:background="@drawable/icon_mine_function" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_weight="1"
                android:text="功能设置"
                android:textColor="@color/color_common_font"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/size_15"
                android:background="@drawable/icon_arrow_right" />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>