<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_190"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:gravity="center"
        android:text="替换头像"
        android:textColor="@color/color_gray_font"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="#FFF2F2F2" />

    <TextView
        android:id="@+id/tv_dialog_modify_head_camera"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/color_common_font"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="#FFF2F2F2" />

    <TextView
        android:id="@+id/tv_dialog_modify_head_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:gravity="center"
        android:text="从相册中选取"
        android:textColor="@color/color_common_font"
        android:textSize="@dimen/sp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="#FFF2F2F2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_10"
        android:background="#FFF2F2F2" />

    <TextView
        android:id="@+id/tv_dialog_modify_head_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_common_font"
        android:textSize="@dimen/sp_18" />

</LinearLayout>