<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.tourye.wake.ui.activities.InviteCardActivity">

    <RelativeLayout
        android:layout_marginLeft="@dimen/size_26"
        android:layout_marginRight="@dimen/size_26"
        android:layout_marginTop="@dimen/size_12"
        android:layout_marginBottom="@dimen/size_17"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_activity_invite_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
        
        <RadioGroup
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            
            <RadioButton
                android:id="@+id/rb_activity_invite_card_code"
                android:layout_marginRight="@dimen/size_10"
                android:button="@null"
                android:background="@drawable/selector_invite_card"
                android:layout_width="@dimen/size_6"
                android:layout_height="@dimen/size_6" />
            <RadioButton
                android:id="@+id/rb_activity_invite_card_continue"
                android:layout_marginRight="@dimen/size_10"
                android:button="@null"
                android:background="@drawable/selector_invite_card"
                android:layout_width="@dimen/size_6"
                android:layout_height="@dimen/size_6" />
            <RadioButton
                android:id="@+id/rb_activity_invite_card_wake"
                android:background="@drawable/selector_invite_card"
                android:button="@null"
                android:layout_width="@dimen/size_6"
                android:layout_height="@dimen/size_6" />

        </RadioGroup>


    </RelativeLayout>

</LinearLayout>
