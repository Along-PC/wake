<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_back"
    android:layout_width="@dimen/size_300"
    android:layout_height="@dimen/size_370">

    <TextView
        android:text="早起打卡"
        android:layout_marginTop="@dimen/size_25"
        android:layout_marginBottom="@dimen/size_5"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_common_font"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_25" />
    
    <TextView
        android:id="@+id/tv_dialog_punch_days"
        android:textColor="@color/color_black_font"
        android:textStyle="bold"
        android:textSize="@dimen/sp_36"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_50" />
    
    <ImageView
        android:id="@+id/img_dialog_punch_head"
        android:background="@drawable/shape_dialog_punch"
        android:layout_marginBottom="@dimen/size_25"
        android:layout_marginTop="@dimen/size_20"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60" />

    <LinearLayout
        android:layout_marginBottom="@dimen/size_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dialog_punch_wake"
                android:textColor="@color/color_black_font"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:layout_height="@dimen/size_33" />
            
            <TextView
                android:text="起床时间"
                android:gravity="center"
                android:textColor="@color/color_gray_font"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20" />
            

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dialog_punch_beat"
                android:textColor="@color/color_black_font"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:layout_height="@dimen/size_33" />

            <TextView
                android:text="今日击败"
                android:gravity="center"
                android:textColor="@color/color_gray_font"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dialog_punch_insist"
                android:textColor="@color/color_black_font"
                android:textSize="@dimen/sp_24"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:layout_height="@dimen/size_33" />

            <TextView
                android:text="连续天数"
                android:gravity="center"
                android:textColor="@color/color_gray_font"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_20" />


        </LinearLayout>

        
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_dialog_punch_show_off"
        android:text="得瑟一下"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/color_white_font"
        android:background="@drawable/shape_fragment_morning_bt_unselected"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="@dimen/size_257"
        android:layout_height="@dimen/size_47" />





</LinearLayout>