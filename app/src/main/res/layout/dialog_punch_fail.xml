<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_back"
    android:layout_width="@dimen/size_297"
    android:layout_height="@dimen/size_280">

    <TextView
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_common_font"
        android:text="早起打卡"
        android:gravity="center"
        android:layout_marginTop="@dimen/size_25"
        android:layout_marginBottom="@dimen/size_5"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_25" />

    <TextView
        android:text="打卡失败"
        android:textSize="@dimen/sp_36"
        android:textColor="#FF101010"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_50" />
    
    <ImageView
        android:id="@+id/img_dialog_punch_fail_head"
        android:background="@drawable/shape_dialog_punch"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:layout_width="@dimen/size_60"
        android:layout_height="@dimen/size_60" />

    <TextView
        android:text="有效打卡时间"
        android:textColor="@color/color_common_font"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20" />
    
    <TextView
        android:textSize="@dimen/sp_14"
        android:text="5:00-8:00"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_20" />




</LinearLayout>