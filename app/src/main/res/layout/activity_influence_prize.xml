<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEFEFF4"
    tools:context="com.tourye.wake.ui.activities.InfluencePrizeActivity">

    <RelativeLayout
        android:layout_marginBottom="@dimen/size_15"
        android:background="#FFFF6956"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_138">

        <TextView
            android:id="@+id/tv_influence_prize_detail"
            android:layout_alignParentRight="true"
            android:text="账户明细"
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15"
            android:textColor="@color/color_white_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_influence_prize_title"
            android:text="影响奖励"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white_font"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_influence_prize_count"
            android:layout_below="@+id/tv_influence_prize_title"
            android:text="---"
            android:textStyle="bold"
            android:textSize="@dimen/sp_48"
            android:gravity="center"
            android:textColor="@color/color_white_font"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_67" />

    </RelativeLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <TextView
            android:text="提现金额(元)"
            android:textSize="@dimen/sp_16"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_common_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_influence_prize_count"
            android:hint="输入要提现的金额"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:paddingRight="@dimen/size_20"
            android:maxLength="8"
            android:layout_marginRight="@dimen/size_15"
            android:layout_weight="1"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/size_10"
        android:text="注：提现至支付宝账户，首笔满10元后可提现。"
        android:textColor="#FF999999"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_influence_prize_withdraw"
        android:background="@drawable/shape_influence_prize"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="center"
        android:textColor="@color/color_white_font"
        android:textSize="@dimen/sp_16"
        android:text="提现"
        android:layout_width="@dimen/size_275"
        android:layout_height="@dimen/size_47" />

</LinearLayout>
