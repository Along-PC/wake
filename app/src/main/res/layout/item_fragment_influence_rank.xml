<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/size_58">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/size_60"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_influence_rank_ranking"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginRight="@dimen/size_16"
            android:textColor="@color/color_common_font"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/size_20" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_item_influence_rank_prize"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_16"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/size_20"
            android:layout_height="@dimen/size_20" />


    </LinearLayout>


    <ImageView
        android:id="@+id/img_item_influence_rank_head"
        android:layout_marginRight="@dimen/size_8"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/size_36"
        android:layout_height="@dimen/size_36" />

    <LinearLayout
        android:id="@+id/ll_item_influence_rank"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_influence_rank_self_name"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_common_font"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_22" />
        <TextView
            android:id="@+id/tv_item_influence_rank_self_order"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_17" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_influence_rank_name"
        android:textSize="@dimen/sp_16"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_22" />

    <TextView
        android:id="@+id/tv_item_influence_rank_count"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/size_15"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_22" />

</LinearLayout>