<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/size_15"
    android:id="@+id/ll_item_person_message_title"
    android:paddingRight="@dimen/size_15"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_item_person_message_title"
        android:layout_marginTop="@dimen/size_20"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_common_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/tv_item_person_message_time"
        android:layout_marginTop="@dimen/size_3"
        android:layout_marginBottom="@dimen/size_10"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/color_gray_font"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_17" />

    <ImageView
        android:id="@+id/img_item_person_message"
        android:layout_marginBottom="@dimen/size_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100" />

</LinearLayout>